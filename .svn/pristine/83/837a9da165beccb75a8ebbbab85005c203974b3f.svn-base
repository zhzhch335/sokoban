/*清除白色外边距*/

html, body {
  height: 100%;
  margin: 0;
  padding: 0;
}

body {
  background-image: url("../img/hacker.jpg");
  background-size: cover;
}

#cover, #cover2 {
  position: absolute;
  height: 100%;
  width: 100%;
  background-color: rgba(250, 250, 250, .2);
  z-index: 3;
}

#hinttext, #hinttext2 {
  color: white;
  position: absolute;
  font-size: 50px;
  left: 40%;
  top: 30%;
}

#cover2 {
  display: none;
}

#maid1,#maid2,#maid3,#answer1,#answer2,#answer3{
    width: 120px; 
    margin:0 20px;
}
#maid1{
  left: 10%;
}
#answer1{
  left: 20%;
}
#maid2{
  left: 30%;
}
#answer2{
  left: 40%;
}
#maid3{
  left: 50%;
}
#answer3{
  left: 60%;
}

#map, #answer, #back, #refresh,.btn {
  display: inline-block;
  position: absolute;
  margin-left: 20px;
}

#map, #answer {
  width: 200px;
  top: 90%;
}

#back {
  left: 25%;
}

#map {
  left: 30%;
}

#answer {
  left: 48%;
}

#refresh {
  left: 66%;
}

#back, #refresh {
  top: 89%;
}

#stepnum {
  position: absolute;
  right: 10px;
  width: auto;
}


/*输入框样式重写*/

#mapfile, #answerfile {
  display: none;
}

canvas {
  z-index: 10;
}
/*清除白色外边距*/

html, body {
  height: 100%;
  margin: 0;
  padding: 0;
}

body {
  background-image: url("../img/hacker.jpg");
  background-size: cover;
}
#cover{
  position: absolute;
  height: 100%;
  width: 100%;
  background-color: rgba(250,250,250,.2);
  z-index: 3;
}
#hinttext{
  color: white;
  position: absolute;
  font-size: 50px;
  left: 40%;
  top: 30%;
}
